<?xml version="1.0"?>

<Devices>
	<Device type="custom" id="aPerson">
		<Name>Person</Name>
		<ConfigUI>
			<Field id="NameSpace" type="label">
				<Label>Use Actions to set custom device states</Label>
			</Field>
			<Field id="address" type="textfield">
				<Label>Any Unique Identifier for the Person Device</Label>
			</Field>
			<Field id="NameSpace2" type="label">
				<Label>This will only be available on Indigo Main Page GUI</Label>
			</Field>
						<Field id="NameSpace3" type="label">
				<Label>This will not be saved as a device state.</Label>
			</Field>
		</ConfigUI>
		<States>
		
		<!-- Identifier States -->
			<State id="firstName">
				<ValueType>String</ValueType>
				<TriggerLabel>First Name</TriggerLabel>
				<ControlPageLabel>First Name</ControlPageLabel>
			</State>
			<State id="lastName">
				<ValueType>String</ValueType>
				<TriggerLabel>Last Name</TriggerLabel>
				<ControlPageLabel>Last Name</ControlPageLabel>
			</State>
			<State id="friendlyName">
				<ValueType>String</ValueType>
				<TriggerLabel>Friendly Name</TriggerLabel>
				<ControlPageLabel>Friendly Name</ControlPageLabel>
			</State>
			
		<!-- Location States -->
			<State id="homeState">
				<ValueType>
					<List>
						<Option value="Home">Home</Option>
						<Option value="Away">Away</Option>
						<Option value="Unsure">Unsure</Option>
					</List>
				</ValueType>
				<TriggerLabel>Home State Changed</TriggerLabel>
				<TriggerLabelPrefix>Home State Changed to</TriggerLabelPrefix>
				<ControlPageLabel>Home State</ControlPageLabel>
			</State>
			<State id="lastHome">
				<ValueType>String</ValueType>
				<TriggerLabel>Last Home</TriggerLabel>
				<ControlPageLabel>Last Home</ControlPageLabel>
			</State>
			<State id="lastAway">
				<ValueType>String</ValueType>
				<TriggerLabel>Last Away</TriggerLabel>
				<ControlPageLabel>Last Away</ControlPageLabel>
			</State>		
			<State id="userLocation">
				<ValueType>String</ValueType>
				<TriggerLabel>User Location</TriggerLabel>
				<ControlPageLabel>User Location</ControlPageLabel>
			</State>	
			<State id="userLatitude">
				<ValueType>String</ValueType>
				<TriggerLabel>User Latitude</TriggerLabel>
				<ControlPageLabel>User Latitude</ControlPageLabel>
			</State>	
			<State id="userLongitude">
				<ValueType>String</ValueType>
				<TriggerLabel>User Longitude</TriggerLabel>
				<ControlPageLabel>User Longitude</ControlPageLabel>
			</State>	
			<State id="userMap">
				<ValueType>String</ValueType>
				<TriggerLabel>User Map</TriggerLabel>
				<ControlPageLabel>User Map</ControlPageLabel>
			</State>
			
		<!-- User ID States -->
			<State id="alertsOn">
				<ValueType>String</ValueType>
				<TriggerLabel>Alerts On</TriggerLabel>
				<ControlPageLabel>Alerts On</ControlPageLabel>
			</State>						
			<State id="userIDNumber">
				<ValueType>String</ValueType>
				<TriggerLabel>User ID Number</TriggerLabel>
				<ControlPageLabel>User ID Number</ControlPageLabel>
			</State>	
			<State id="userPinNumber">
				<ValueType>String</ValueType>
				<TriggerLabel>User PIN Number</TriggerLabel>
				<ControlPageLabel>User PIN Number</ControlPageLabel>
			</State>
			<State id="userPassword">
				<ValueType>String</ValueType>
				<TriggerLabel>User Password</TriggerLabel>
				<ControlPageLabel>User Password</ControlPageLabel>
			</State>	
			
		<!-- Person Contact Information States -->
			<State id="phone1Number">
				<ValueType>String</ValueType>
				<TriggerLabel>Phone1 Number</TriggerLabel>
				<ControlPageLabel>Phone1 Number</ControlPageLabel>
			</State>
			<State id="phone1SMS">
				<ValueType>String</ValueType>
				<TriggerLabel>Phone1 SMS</TriggerLabel>
				<ControlPageLabel>Phone1 SMS</ControlPageLabel>
			</State>	
			<State id="phone1MMS">
				<ValueType>String</ValueType>
				<TriggerLabel>Phone1 MMS</TriggerLabel>
				<ControlPageLabel>Phone1 MMS</ControlPageLabel>
			</State>
			<State id="phone1IPAddress">
				<ValueType>String</ValueType>
				<TriggerLabel>Phone1 IP Address</TriggerLabel>
				<ControlPageLabel>Phone1 IP Address</ControlPageLabel>
			</State>	
			<State id="phone2Number">
				<ValueType>String</ValueType>
				<TriggerLabel>Phone2 Number</TriggerLabel>
				<ControlPageLabel>Phone2 Number</ControlPageLabel>
			</State>
			<State id="phone2SMS">
				<ValueType>String</ValueType>
				<TriggerLabel>Phone2 SMS</TriggerLabel>
				<ControlPageLabel>Phone2 SMS</ControlPageLabel>
			</State>	
			<State id="phone2MMS">
				<ValueType>String</ValueType>
				<TriggerLabel>Phone2 MMS</TriggerLabel>
				<ControlPageLabel>Phone2 MMS</ControlPageLabel>
			</State>
			<State id="phone2IPAddress">
				<ValueType>String</ValueType>
				<TriggerLabel>Phone2 IP Address</TriggerLabel>
				<ControlPageLabel>Phone2 IP Address</ControlPageLabel>
			</State>	
			<State id="email1Address"> 
				<ValueType>String</ValueType>
				<TriggerLabel>Email 1 Address</TriggerLabel>
				<ControlPageLabel>Email 1 Address</ControlPageLabel>
			</State>	
			<State id="email2Address"> 
				<ValueType>String</ValueType>
				<TriggerLabel>Email 2 Address</TriggerLabel>
				<ControlPageLabel>Email 2 Address</ControlPageLabel>
			</State>						
		</States>
		<UiDisplayStateId>homeState</UiDisplayStateId>
	</Device>
</Devices>
